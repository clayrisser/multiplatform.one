{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "vscode:compile",
      "group": "build",
      "problemMatcher": ["$ts-webpack", "$tslint-webpack"]
    },
    {
      "type": "npm",
      "script": "vscode:watch",
      "group": "build",
      "isBackground": true,
      "problemMatcher": ["$ts-webpack-watch", "$tslint-webpack-watch"]
    },
    {
      "label": "api/prelaunch",
      "type": "shell",
      "command": "./mkpm",
      "args": ["api/prelaunch"]
    },
    {
      "label": "next/prelaunch",
      "type": "shell",
      "command": "./mkpm",
      "args": ["next/prelaunch"]
    }
  ]
}
