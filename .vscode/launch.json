{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "storybook dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm storybook/dev"
    },
    {
      "name": "storybook expo dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm storybook-expo/dev"
    },
    {
      "name": "next dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "../../mkpm next/+dev",
      "preLaunchTask": "next/prelaunch",
      "cwd": "${workspaceFolder}/platforms/next",
      "serverReadyAction": {
        "webRoot": "${workspaceFolder}/platforms/next",
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "expo dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm expo/dev"
    },
    {
      "name": "electron dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm electron/dev"
    },
    {
      "name": "keycloak dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm keycloak/dev"
    },
    {
      "name": "api dev",
      "type": "node-terminal",
      "request": "launch",
      "preLaunchTask": "api/prelaunch",
      "cwd": "${workspaceFolder}/api",
      "command": "../mkpm api/+dev"
    }
  ]
}
