{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "storybook dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm storybook/dev"
    },
    {
      "name": "storybook-expo dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm storybook-expo/dev"
    },
    {
      "name": "next dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "../../mkpm next/+dev",
      "preLaunchTask": "next/prelaunch",
      "cwd": "${workspaceFolder}/platforms/next",
      "serverReadyAction": {
        "webRoot": "${workspaceFolder}/platforms/next",
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "expo dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm expo/dev"
    },
    {
      "name": "electron dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm electron/dev"
    },
    {
      "name": "keycloak dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm keycloak/dev"
    },
    {
      "name": "frappe dev",
      "type": "node-terminal",
      "request": "launch",
      "command": ". ${workspaceFolder}/frappe/frappe-bench/env/bin/activate; honcho start web socketio watch schedule worker",
      "cwd": "${workspaceFolder}/frappe/frappe-bench"
    },
    {
      "name": "api dev",
      "type": "node-terminal",
      "request": "launch",
      "preLaunchTask": "api/prelaunch",
      "cwd": "${workspaceFolder}/api",
      "command": "../mkpm api/+dev"
    },
    {
      "name": "api mesh",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/api",
      "command": "../mkpm api/mesh"
    }
  ],
  "compounds": [
    {
      "name": "Backend",
      "configurations": [
        "api dev",
        "api mesh",
        "frappe dev"
      ]
    },
    {
      "name": "Frontend",
      "configurations": [
        "expo dev",
        "next dev"
      ]
    },
    {
      "name": "Platform",
      "configurations": [
        "api dev",
        "api mesh",
        "expo dev",
        "frappe dev",
        "next dev"
      ]
    },
    {
      "name": "Storybook",
      "configurations": [
        "keycloak dev",
        "storybook dev",
        "storybook-expo dev"
      ]
    },
    {
      "name": "All",
      "configurations": [
        "api dev",
        "api mesh",
        "expo dev",
        "frappe dev",
        "keycloak dev",
        "next dev",
        "storybook dev",
        "storybook-expo dev"
      ]
    }
  ]
}
