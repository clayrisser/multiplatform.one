{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "storybook dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm storybook/dev"
    },
    {
      "name": "storybook native dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm storybook-native/dev"
    },
    {
      "name": "next platform dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm next/dev",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "expo platform dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm expo/dev"
    },
    {
      "name": "api dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm api/dev"
    }
  ]
}
