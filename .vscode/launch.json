{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "storybook dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm storybook/dev"
    },
    {
      "name": "storybook native dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm storybook-native/dev"
    },
    {
      "name": "next platform dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "../../.mkpm/mkpm/.bin/mkpm next/+dev",
      "preLaunchTask": "next/prelaunch",
      "cwd": "${workspaceFolder}/platforms/next",
      "serverReadyAction": {
        "webRoot": "${workspaceFolder}/platforms/next",
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "expo platform dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm expo/dev"
    },
    {
      "name": "api dev",
      "type": "node-terminal",
      "request": "launch",
      "preLaunchTask": "api/prelaunch",
      "cwd": "${workspaceFolder}/api",
      "command": "../.mkpm/mkpm/.bin/mkpm api/+dev"
    }
  ]
}
