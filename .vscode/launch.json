{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "storybook dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm storybook/dev"
    },
    {
      "name": "storybook native dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm storybook-native/dev"
    },
    {
      "name": "next platform dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm next/dev",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "expo platform dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm expo/dev"
    },
    {
      "name": "api dev",
      "type": "node-terminal",
      "request": "launch",
      "preLaunchTask": "api/prelaunch",
      "cwd": "${workspaceFolder}/api",
      "envFile": "${workspaceFolder}/.env",
      "command": "POSTGRES_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DATABASE}?sslmode=prefer ${workspaceFolder}/node_modules/.bin/tsup --watch '**/*.ts' --onSuccess 'node bin/buildSchema.js && NODE_ENV=development node bin/main.js'"
    },
    {
      "name": "gql dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm gql/dev"
    }
  ]
}
