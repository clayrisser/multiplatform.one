{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "start storybook",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm storybook/dev"
    },
    {
      "name": "start storybook native",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm storybook-native/dev"
    },
    {
      "name": "start next platform",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm next/dev",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "start expo platform",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm expo/dev"
    }
  ]
}
