{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "start storybook",
      "type": "node-terminal",
      "request": "launch",
      "command": "make -s storybook/start"
    },
    {
      "name": "start storybook native",
      "type": "node-terminal",
      "request": "launch",
      "command": "make -s storybook-native/start"
    },
    {
      "name": "start next platform",
      "type": "node-terminal",
      "request": "launch",
      "command": "make -s next/start",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "start expo platform",
      "type": "node-terminal",
      "request": "launch",
      "command": "make -s expo/start"
    }
  ]
}
