{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "storybook dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm storybook/dev"
    },
    {
      "name": "storybook-expo dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm storybook-expo/dev"
    },
    {
      "name": "one dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "../../mkpm one/+dev",
      "cwd": "${workspaceFolder}/platforms/one"
    },
    {
      "name": "electron dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm electron/dev"
    },
    {
      "name": "keycloak dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "./mkpm keycloak/dev"
    },
    {
      "name": "frappe dev",
      "type": "node-terminal",
      "request": "launch",
      "command": ". ${workspaceFolder}/frappe/frappe-bench/env/bin/activate; honcho start web socketio watch schedule worker",
      "cwd": "${workspaceFolder}/frappe/frappe-bench"
    },
    {
      "name": "api dev",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/api",
      "command": "../mkpm api/+dev"
    },
    {
      "name": "api mesh",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/api",
      "command": "../mkpm api/mesh"
    }
  ],
  "compounds": [
    {
      "name": "Backend",
      "configurations": ["api dev", "api mesh", "frappe dev"]
    },
    {
      "name": "Frontend",
      "configurations": ["one dev"]
    },
    {
      "name": "Web",
      "configurations": ["api dev", "api mesh", "frappe dev", "one dev"]
    },
    {
      "name": "Native",
      "configurations": ["api dev", "api mesh", "frappe dev", "one dev"]
    },
    {
      "name": "Storybook",
      "configurations": ["keycloak dev", "storybook dev", "storybook-expo dev"]
    }
  ]
}
