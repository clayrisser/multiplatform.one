{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "tsBuildInfoFile": ".tsbuildinfo",
    "paths": {
      "@multiplatform.one/components": ["./packages/components/*"],
      "app/*": ["./app/*"],
      "gql/*": ["./gql/*"],
      "ui/*": ["./ui/*"]
    }
  },
  "references": [{ "path": "./gql" }, { "path": "./ui" }, { "path": "./app" }, { "path": "./packages/components" }]
}
