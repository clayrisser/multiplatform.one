include $(MKPM)/mkpm
include $(MKPM)/chain
include $(MKPM)/dotenv

ACTIONS += deps
$(ACTION)/deps: $(PROJECT_ROOT)/package.json package.json
	@$(call make,$(PROJECT_ROOT)) \~deps DEPS_ARGS=$(DEPS_ARGS)
	@$(call done,$@)

ACTIONS += spellcheck~deps
$(ACTION)/spellcheck: $(call git_deps,\.(md)$$)
	-@$(call cspell,$?,$(ARGS))
	@$(call done,$@)

ACTIONS += check~spellcheck
$(ACTION)/check: $(call git_deps,\.([jt]sx?)$$)
	$(BIOME) check --fix --unsafe $?
	@$(call done,$@)

ACTIONS += test~check
$(ACTION)/test: $(call git_deps,\.([jt]sx?)$$)
	-@$(call jest,$?,$(ARGS))
	@$(call done,$@)

ACTIONS += build~check
BUILD_TARGETS := dist/cjs/index.js
dist/cjs/index.js:
	@$(call reset,build)
$(ACTION)/build: $(call git_deps,\.([jt]sx?)$$)
	@$(PNPM) run build
	@$(call done,$@)

.PHONY: publish
publish:
	@$(NPM) publish

-include $(call chain)
