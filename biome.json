{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "formatWithErrors": true,
    "include": ["**/*.{js,jsx,ts,tsx,json,yaml,yml}"]
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "jsxRuntime": "transparent"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noParameterAssign": {
          "level": "off"
        },
        "noNonNullAssertion": {
          "level": "off"
        },
        "noCommaOperator": {
          "level": "off"
        }
      },
      "suspicious": {
        "noExplicitAny": {
          "level": "off"
        },
        "noArrayIndexKey": {
          "level": "off"
        },
        "noPrototypeBuiltins": {
          "level": "off"
        }
      },
      "correctness": {
        "useExhaustiveDependencies": {
          "level": "off"
        }
      },
      "complexity": {
        "noForEach": {
          "level": "off"
        },
        "noStaticOnlyClass": {
          "level": "off"
        },
        "noBannedTypes": {
          "level": "off"
        }
      },
      "a11y": {
        "useValidAnchor": {
          "level": "off"
        }
      }
    }
  }
}
