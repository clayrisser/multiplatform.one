{
  "name": "root",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "build": "turbo run build --filter '!./platforms/*' --filter '!./api'",
    "check": "biome check --fix --unsafe `(git ls-files && (git lfs ls-files | cut -d' ' -f3)) | sort | uniq -u | grep -E '(html)|(s?css)|(md)|(json)|(yaml)|([jt]sx?)$'`",
    "count": "cloc `(git ls-files && (git lfs ls-files | cut -d' ' -f3)) | sort | uniq -u | grep -E '(html)|(s?css)|(md)|(json)|(yaml)|([jt]sx?)$'`",
    "dev": "turbo run dev",
    "generate": "turbo run generate",
    "spellcheck": "cspell --unique `(git ls-files && (git lfs ls-files | cut -d' ' -f3))`",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@changesets/cli": "^2.27.11",
    "app": "workspace:*",
    "cspell": "^8.17.1",
    "gql": "workspace:*",
    "npm-check-updates": "^16.14.20",
    "turbo": "^1.13.4",
    "typescript": "^5.6.2",
    "ui": "workspace:*"
  },
  "pnpm": {
    "overrides": {
      "@prisma/client": "~5.12.1",
      "@prisma/generator-helper": "~5.12.1",
      "@prisma/instrumentation": "~5.12.1",
      "@prisma/internals": "~5.12.1",
      "@storybook/addon-a11y": "~7.6.19",
      "@storybook/addon-actions": "~7.6.19",
      "@storybook/addon-essentials": "~7.6.19",
      "@storybook/addon-interactions": "~7.6.19",
      "@storybook/addon-links": "~7.6.19",
      "@storybook/addon-notes": "^5.3.21",
      "@storybook/addon-react-native-web": "0.0.23",
      "@storybook/addon-storysource": "~7.6.19",
      "@storybook/builder-webpack5": "~7.6.19",
      "@storybook/manager-webpack5": "^6.5.16",
      "@storybook/nextjs": "~7.6.19",
      "@storybook/node-logger": "~7.6.19",
      "@storybook/react": "~7.6.19",
      "@storybook/react-webpack5": "~7.6.19",
      "@storybook/types": "~7.6.19",
      "@types/react": "^18.3.1",
      "@types/react-native": "^0.73.0",
      "@urql/core": "2.3.6",
      "estree-util-build-jsx": "2.2.0",
      "estree-walker": "2.0.2",
      "expo": "~51.0.28",
      "hono": "^4.6.5",
      "jackspeak": "2.1.1",
      "prisma": "~5.12.1",
      "react": "~18.2.0",
      "react-dom": "^18.0.0",
      "react-native": "0.74.5",
      "type-graphql": "2.0.0-rc.1",
      "typescript": "^5.6.2",
      "vite": "^6.0.3",
      "graphql": "^16.8.1"
    }
  },
  "tamaguiModules": ["@multiplatform.one/components", "ui"],
  "packageManager": "pnpm@9.12.0"
}
