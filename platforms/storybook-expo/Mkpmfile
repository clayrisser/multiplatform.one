include $(MKPM)/mkpm
DOTENV ?= $(PROJECT_ROOT)/.env
include $(MKPM)/chain
include $(MKPM)/dotenv

ACTIONS += deps
$(ACTION)/deps: $(PROJECT_ROOT)/package.json package.json
	@$(call make,$(PROJECT_ROOT)) \~deps DEPS_ARGS=$(DEPS_ARGS)
	@$(call done,$@)

ACTIONS += spellcheck~deps
$(ACTION)/spellcheck: $(call git_deps,\.(md)$$)
	-@$(call cspell,$?,$(SPELLCHECK_ARGS))
	@$(call done,$@)

ACTIONS += check~spellcheck
$(ACTION)/check: $(call git_deps,\.([jt]sx?)$$)
	$(BIOME) check --fix --unsafe $?
	@$(call done,$@)

ACTIONS += test~check
$(ACTION)/test: $(call git_deps,\.([jt]sx?)$$)
	-@$(call jest,$?,$(TEST_ARGS))
	@$(call done,$@)

EXPO_PORT ?= 8081
.PHONY: dev +dev
dev: | ~deps +dev
+dev:
	@$(EXPO) start --tunnel -c -p $(EXPO_PORT) --go $(DEV_ARGS)

-include $(call chain)
