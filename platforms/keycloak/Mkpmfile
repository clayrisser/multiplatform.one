include $(MKPM)/mkpm
DEFAULT_ENV ?= $(PROJECT_ROOT)/.env
include $(MKPM)/dotenv
include $(MKPM)/chain

NODE_HEAP ?= 8192
STORYBOOK ?= NODE_OPTIONS="--max-old-space-size=$(NODE_HEAP)" $(PNPM) storybook

ACTIONS += deps
$(ACTION)/deps: $(PROJECT_ROOT)/package.json package.json
	@$(call make,$(PROJECT_ROOT)) \~deps DEPS_ARGS=$(DEPS_ARGS)
	@$(call done,$@)

ACTIONS += spellcheck~deps
$(ACTION)/spellcheck: $(call git_deps,\.(md)$$)
	-@$(call cspell,$?,$(ARGS))
	@$(call done,$@)

ACTIONS += check~spellcheck
$(ACTION)/check: $(call git_deps,\.([jt]sx?)$$)
	$(BIOME) check --fix --unsafe $?
	@$(call done,$@)

ACTIONS += test~check
$(ACTION)/test: $(call git_deps,\.([jt]sx?)$$)
	-@$(call jest,$?,$(TEST_ARGS))
	@$(call done,$@)

ACTIONS += build~test
BUILD_TARGETS := storybook-static/index.html
storybook-static/index.html:
	@$(call reset,build)
$(ACTION)/build: $(call git_deps,\.([jt]sx?)$$)
	@$(PNPM) run build $(BUILD_ARGS)
	@$(call done,$@)

PORT ?= 6006
.PHONY: dev +dev
dev: | ~deps +dev
+dev:
	@$(PNPM) run dev -p $(PORT)

.PHONY: postinstall
postinstall:

-include $(call chain)
