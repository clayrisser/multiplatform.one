{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "tsBuildInfoFile": ".tsbuildinfo",
    "noEmit": true,
    "target": "ES5",
    "paths": {
      "react-native": ["react-native-web"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strict": false,
    "isolatedModules": true,
    "strictNullChecks": true
  },
  "include": [
    "**/*.js",
    "**/*.json",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "../../app/**/*.js",
    "../../app/**/*.json",
    "../../app/**/*.jsx",
    "../../app/**/*.ts",
    "../../app/**/*.tsx",
    ".next/types/**/*.ts",
    "components/utils.tsx"
  ],
  "exclude": ["node_modules", "dist", "lib"]
}
