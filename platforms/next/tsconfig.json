{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "tsBuildInfoFile": ".tsbuildinfo",
    "noEmit": true,
    "target": "ES5",
    "paths": {
      "react-native": [
        "react-native-web"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strict": false,
    "isolatedModules": true,
    "strictNullChecks": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.json",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}
