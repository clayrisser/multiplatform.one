    "@tamagui/next-plugin": "^1.82.8",
    "@tamagui/next-theme": "^1.82.8",
    "api": "*",
    "cookie": "^0.6.0",
    "graphql": "~15.3.0",
    "graphql-scalars": "^1.22.4",
    "graphql-ws": "^5.14.3",
    "graphql-yoga": "^5.1.1",
    "next": "^13.5.6",
    "next-i18next": "^14.0.3",
    "next-images": "^1.8.5",
    "next-themes": "^0.2.1",
    "node-cleanup": "^2.1.2",
    "raf": "^3.4.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "~0.73.1",
    "react-native-web": "~0.18.12",
    "react-native-web-lite": "^1.82.8",
    "reflect-metadata": "^0.2.1",
    "type-graphql": "^1.1.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@expo/next-adapter": "^5.0.2",
    "@types/cookie": "^0.6.0",
    "@types/node": "~20.10.6",
    "@types/node-cleanup": "^2.1.5",
    "@types/ws": "^8.5.10",
    "nodemon": "^3.0.2"
  },
  "transpileModules": [
    "@multiplatform.one/components",
    "@multiplatform.one/keycloak",
    "app",
    "estree-util-build-jsx",
    "multiplatform.one",
    "ui"
  ],
  "jest": {
    "testRegex": "((/(tests|__tests__)((/|/[^_.\n][^/\n]*(/[^_.\n][^/\n]+)*/)[^_.\n][^/\n]*))|((/|/.*/)(([^_.\n][^/\n]*.(spec|test))|(spec|test)))).[jt]sx?$",
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/out/"
    ]
  },
  "jestSonar": {
    "reportPath": "node_modules",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "nodemonConfig": {
    "ext": "ts,tsx,js,jsx,mjs,cjs,graphql,html,json,env",
    "signal": "SIGTERM",
    "delay": 1000,
    "watch": [
      "../../api/lib"
    ]
  }
}
