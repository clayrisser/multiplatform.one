{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "strict": true,
    "rootDir": ".",
    "noEmit": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "types": ["node", "react", "vite/client"],
    "lib": ["DOM", "ESNext"]
  },
  "include": [
    "../../app/i18n/i18n.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.json"
  ]
}
