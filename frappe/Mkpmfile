include $(MKPM)/mkpm
include $(MKPM)/dotenv

.PHONY: generate
generate:
	@cd frappe-bench && \
		bench --site $(SITE_NAME) graphql generate_sdl

.PHONY: bootstrap dev
bootstrap dev:
	@frappe-$@

.PHONY: reset
reset:
	@rm -rf frappe-bench
	@$(call make) bootstrap
